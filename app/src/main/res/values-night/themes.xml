<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeKeeper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_100</item>
        <item name="colorPrimaryVariant">@color/white_100_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_custom</item>
        <item name="colorSecondaryVariant">@color/purple_custom_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOutline">@color/white</item>
    </style>

    <style name="Theme.TimeKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TimeKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="actionOverflowButtonStyle">@style/Theme.TimeKeeper.OverflowButtonStyle</item>
    </style>

    <style name="Theme.TimeKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="Theme.TimeKeeper.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

</resources>